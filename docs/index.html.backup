    <script>
        // Language switcher
        const langButtons = document.querySelectorAll('.lang-btn');
        const langContents = document.querySelectorAll('[lang]');

        langButtons.forEach(button => {
            button.addEventListener('click', () => {
                const selectedLang = button.dataset.lang;
                
                // Update button states
                langButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                
                // Update content visibility
                langContents.forEach(content => {
                    if (content.getAttribute('lang') === selectedLang) {
                        content.classList.add('active-lang');
                    } else {
                        content.classList.remove('active-lang');
                    }
                });

                // Save preference
                localStorage.setItem('preferredLang', selectedLang);
            });
        });

        // Load saved language preference
        const savedLang = localStorage.getItem('preferredLang');
        if (savedLang) {
            const button = document.querySelector(`[data-lang="${savedLang}"]`);
            if (button) button.click();
        }
    </script>
